*
  margin 0
  padding 0

body
  height 100%
  background color-nav
  color color-font
  font-family font-default
  font-size 14px
  text-shadow 0 0 1px transparent

h1, h2, h3, h4, h5, h6
  font-family font-title

h1
  font-size 1.8em

h2
  font-size 1.5em

h3
  font-size 1.3em

a
  text-decoration none
  color color-link
  &:hover
    text-decoration underline

.alignleft
  float left

.alignright
  float right

.clearfix
  clearfix()

.inner
  width page-width
  margin 0 auto

html
  height 100%

#container
  height 100%
  min-width 600px
  padding-left: 240px
  padding-right: 270px

#content
  float left
  width 100%

#main-col
  width 98%
