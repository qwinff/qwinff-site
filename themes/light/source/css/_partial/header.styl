#header
  margin-left 30px
  width: 245px
  float: left
  text-shadow 0 0 1px #fff
  a
    color #999
    &:hover
      color color-link
      text-decoration none
    
  h1
    margin-top 30px
    font-weight normal
    font-size 2.5em
    line-height 1

  h2
    font-weight normal
    font-size 0.9em
    line-height 1
    margin-top 10px
  
  #main-nav
    font-family font-title
    line-height 2.5em
    ul
      float left
      list-style none
      li
        float left
        margin-left 30px