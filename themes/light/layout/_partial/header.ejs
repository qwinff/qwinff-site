<div class="alignleft">
  <a href="<%- config.root %>"><img src="/img/logo_256.png">
  <h1><%= config.title %></h1>
  <h2><% if (config.subtitle){ %><%= config.subtitle %><% } %></h2></a>
</div>
<br>
<nav id="main-nav">
  <ul>
    <% // canonicalize path
       var current_path = (config.root + path).replace(/\/index\.html$/g, ""); // no trailing index.html
       current_path = current_path.replace(/\/$/g, ""); // no trailing /
       if (current_path == "") current_path = "/"; // if empty, fill in root (/)
    %>
    <% for (var i in theme.menu){ %>
      <% if (theme.menu[i] == current_path) { %>
    <li><span class="actived_nav"><%= i %></span></li>
    <br>
      <% } else { %>
        <a href="<%- theme.menu[i] %>"><li><%= i %></li></a>
	<br>
      <% } %>
    <% } %>
  </ul>
  <div class="clearfix"></div>
</nav>
<div class="clearfix"></div>
